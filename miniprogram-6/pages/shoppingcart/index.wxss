/* pages/shoppingcart/index.wxss */
.empty{
    width: 100%;
    height: 100%;
    background-color: rgba(255,236,179,.2);
    font-size: 45rpx;
    text-align: center;
    padding-top: 100rpx;
    
}
.content-item{
    display: flex;
    border:1px solid #ccc;
    align-items: center;
    width: 95%;
    margin: 0 auto;
    border-radius: 20rpx;
    margin-top: 25rpx;
}
.content-item .shopping-icon{
    width: 130rpx;
    border-radius: 20rpx;
}
.content-item .name{
    flex: 1;
    margin-left: 15rpx;
}
.content-item .price{
    font-size: 40rpx;
    color:red;
    font-weight: 1000
}
.content-item .count{
    width: 160rpx;
    display: flex;
    margin-left: 15rpx;
}
.content-item .count .count-icon{
    width: 40rpx;
    height: 40rpx;
    text-align: center;
    line-height: 40rpx;
    font-size: 40rpx;
    margin: 0 5rpx;
}

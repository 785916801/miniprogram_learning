/* pages/index/index.wxss */
.banner{
    width: 100%
}
.navBar{
    display: flex;
    justify-content: space-around;
}
.navBar .navBar-item{
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 120rpx;
    height: 120rpx;
}
.navBar .navBar-item .icon{
    width: 80rpx;
    height: 80rpx;
}
.navBar .navBar-item .text{
    font-size: 30rpx;
}
.title{
    width: 95%;
    height: 70rpx;
    margin: 20rpx auto;
    line-height: 70rpx;
    padding-left: 10rpx;
    background-image: linear-gradient(to left,aliceblue,skyblue);
    border-radius: 20rpx;
}
.list-item{
    display: flex;
    align-items: center;
    border: 1px solid #ccc;
    margin: 20rpx;
    border-radius: 20rpx;
    box-shadow: 0 0 10px #ccc;
}
.list-item .item_image{
    width: 170rpx;
    border-radius: 20rpx;
}
.list-item .info{
    flex: 1;
    display: flex;
    flex-direction: column;
    padding-left: 30rpx;
}
.list-item .info .name{
    font-size: 32rpx;
}
.list-item .info .count{
    margin-top: 30rpx;
    margin-left: 20rpx;
    font-size: 24rpx;
    color: #999;
}
.list-item .price{
    margin-right: 40rpx;
    color: red;
    font-size: 32rpx;
    font-weight: 1000;
}
.list-item .item_icon{
    margin-right: 20rpx;
    width: 70rpx;
    height: 70rpx;
}
<view class="result" style="height: {{windowHeight / 4}}px">{{displayResult}}</view>
        <view class="buttons">
        <view class="row">
          <button class="btn gray" style="width: {{windowWidth / 4}}px; height: {{windowHeight / 8}}px" bindtap="btnTap" data-value="AC">AC</button>
          <button class="btn gray" style="width: {{windowWidth / 4}}px; height: {{windowHeight / 8}}px" bindtap="btnTap" data-value="+/-">+/-</button>
          <button class="btn gray" style="width: {{windowWidth / 4}}px; height: {{windowHeight / 8}}px" bindtap="btnTap" data-value="%">%</button>
          <button class="btn orange" style="width: {{windowWidth / 4}}px; height: {{windowHeight / 8}}px" bindtap="btnTap" data-value="/">รท</button>
        </view>
        <view class="row">
          <button class="btn" style="width: {{windowWidth / 4}}px; height: {{windowHeight / 8}}px" bindtap="btnTap" data-value="7">7</button>
          <button class="btn" style="width: {{windowWidth / 4}}px; height: {{windowHeight / 8}}px" bindtap="btnTap" data-value="8">8</button>
          <button class="btn" style="width: {{windowWidth / 4}}px; height: {{windowHeight / 8}}px" bindtap="btnTap" data-value="9">9</button>
          <button class="btn orange" style="width: {{windowWidth / 4}}px; height: {{windowHeight / 8}}px" bindtap="btnTap" data-value="*">ร</button>
        </view>
        <view class="row">
          <button class="btn" style="width: {{windowWidth / 4}}px; height: {{windowHeight / 8}}px" bindtap="btnTap" data-value="4">4</button>
          <button class="btn" style="width: {{windowWidth / 4}}px; height: {{windowHeight / 8}}px" bindtap="btnTap" data-value="5">5</button>
          <button class="btn" style="width: {{windowWidth / 4}}px; height: {{windowHeight / 8}}px" bindtap="btnTap" data-value="6">6</button>
          <button class="btn orange" style="width: {{windowWidth / 4}}px; height: {{windowHeight / 8}}px" bindtap="btnTap" data-value="-">-</button>
        </view>
        <view class="row">
          <button class="btn" style="width: {{windowWidth / 4}}px; height: {{windowHeight / 8}}px" bindtap="btnTap" data-value="1">1</button>
          <button class="btn" style="width: {{windowWidth / 4}}px; height: {{windowHeight / 8}}px" bindtap="btnTap" data-value="2">2</button>
          <button class="btn" style="width: {{windowWidth / 4}}px; height: {{windowHeight / 8}}px" bindtap="btnTap" data-value="3">3</button>
          <button class="btn orange" style="width: {{windowWidth / 4}}px; height: {{windowHeight / 8}}px" bindtap="btnTap" data-value="+">+</button>
        </view>
        <view class="row grid">
  <button class="btn" bindtap="btnTap" data-value="0">0</button>
  <button class="btn" bindtap="btnTap" data-value=".">.</button>
  <button class="btn orange" bindtap="btnTap" data-value="=">=</button>
</view>

      </view>

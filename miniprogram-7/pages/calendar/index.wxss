.calendar {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .calendar-header {
    font-size: 24px;
    margin: 20px;
    display: flex;
    justify-content: space-around;
    align-items: center;
    padding: 10px;
  }
  
  .calendar-body {
    width: 90%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .week, .days {
    width: 100%;
    display: flex;
    justify-content: space-around;
  }
  
  .day {
    width: 14%;
    text-align: center;
    flex-grow: 1;
  }
  .calendar-header button {
    flex-grow: 1;
    padding: 10px;
    width: 80px;
  }
  .calendar-header picker {
    flex-grow: 2;
    text-align: center;
    padding: 5px;
    width: 70%;
    margin: 0 30px 0;
  }
  
/* index.wxss */
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
  }
  
  .count {
    font-size: 48px;
    margin-bottom: 20px;
  }
  
  .btn {
    width: 200px;
    height: 60px;
    background-color: #3498db;
    color: #ffffff;
    font-size: 24px;
    border-radius: 8px;
    margin-bottom: 10px;
  }
  
  .btn:active {
    background-color: #2980b9;
  }
  
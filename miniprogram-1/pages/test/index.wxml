<image class="bg" src="../../images/weather.jpg" mode="widthFix" />
<view class="content">
  <view class="today">
    <view class="info">
      <view class="temp">{{tempMin}}â„ƒ</view>
      <view class="lowhigh">{{low}}/{{high}}</view>
      <view class="type">{{type}}</view>
      <view class="city">{{wind}}</view>
      <view class="week">{{week}}</view>
      <view class="weather">{{weather}}</view>
    </view>
  </view>
</view>
<view class="hr"></view>

<scroll-view class="weather-list" scroll-x  >
  <block wx:for="{{weatherData}}" wx:key="index">
    <view class="weather-item">
      <view>{{item.weather}}</view>
      <view>{{item.high}}/{{item.low}}</view>
      <view>{{item.date}}</view>
      <view>{{item.airQuality}}</view>
      <view>{{item.wind}}</view>
    </view>
    </block>
</scroll-view>

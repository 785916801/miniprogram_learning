page{
    padding-top: 225px;
}
.video{
    z-index: 1;
    position: fixed;
    flex-wrap: nowrap;
    top:0;
    left:0;
    width: 100%;
}
.content{
    margin:30rpx 30rpx 0;
}
.detail{
    position: relative;
}
.artistAvatar{
    width: 80rpx;
    height: 80rpx;
    object-fit: cover;
    border-radius: 50%;
}
.artist{
    display: flex;
    align-items: center;
}
.artistName{
    font-size: 32rpx;
    margin-left: 30rpx;
}
.name{
    font-size: 40rpx;
}
.playCount{
    margin-top: 8rpx;
    font-size: 24rpx;
    color: #999;
}
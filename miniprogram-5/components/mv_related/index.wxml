<wxs src="../../utils/format.wxs" module="format"></wxs>
<view class="item">
    <view class="content">
        <view class="cover">
            <image src="{{item.cover}}" mode="aspectFit"/>
            <view class="duration">{{format.formatTime(item.duration)}}</view>
        </view>
        <view class="info">
            <view class="mvName">{{item.name}}</view>
            <view class="creator">{{item.artistName}}</view>
            <view class="playCount">{{format.formatCount(item.playCount)}}</view>
        </view>
    </view>
</view>